// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USER & AUTHENTICATION
// ============================================

model User {
  id        String  @id @default(cuid())
  username  String?  @unique
  email     String? @unique
  avatarUrl String?

  // Social OAuth
  twitterId        String? @unique
  twitterHandle    String?
  twitterConnected Boolean @default(false)
  discordId        String? @unique
  discordHandle    String?
  discordConnected Boolean @default(false)

  // Ranking System (50/35/15)
  globalRank       Int @default(0)
  effortScore      Int @default(0)
  proficiencyScore Int @default(0)
  activityScore    Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Auth Relations
  accounts Account[]
  sessions Session[]

  // App Relations
  hostedTournaments  Tournament[]
  registrations      TournamentRegistration[]
  bets               Bet[]
  notifications      Notification[]
  stats              UserStats?
  watchSessions      WatchSession[]
  chatMessages       ChatMessage[]
  leaderboardEntries LeaderboardEntry[]
  hostedGames        Game[]
  claimedInviteCodes TournamentInviteCode[]

  @@map("users")
}

// ============================================
// NEXTAUTH ADAPTER MODELS
// ============================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model UserStats {
  userId String @id
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  tournamentsHosted Int       @default(0)
  tournamentsWon    Int       @default(0)
  totalMatchesWon   Int       @default(0)
  totalHoursPlayed  Int       @default(0)
  tokensEarned      Int       @default(0)
  currentStreak     Int       @default(0)
  lastActivity      DateTime?

  @@map("user_stats")
}

// ============================================
// GAMES
// ============================================

model Game {
  id           String   @id @default(cuid())
  title        String
  description  String?
  thumbnailUrl String?
  gameUrl      String? // URL where the game is hosted/played
  categories   String[]
  platforms    String[]
  playerCount  Int      @default(0)
  isListed     Boolean  @default(true)
  hasOracleIntegration Boolean @default(false)

  createdById String
  createdBy   User     @relation(fields: [createdById], references: [id])
  createdAt   DateTime @default(now())

  // Relations
  tournaments        Tournament[]
  leaderboardEntries LeaderboardEntry[]

  @@map("games")
}

// ============================================
// TOURNAMENTS
// ============================================

enum TournamentStatus {
  PENDING
  ACTIVE
  COMPLETED
  CANCELLED
}

model Tournament {
  id          String  @id @default(cuid())
  name        String
  description String?

  gameId    String
  game      Game     @relation(fields: [gameId], references: [id])
  gameMode  String
  region    String?
  platforms String[]

  hostId String
  host   User   @relation(fields: [hostId], references: [id])

  maxPlayers        Int
  registeredPlayers Int      @default(0)
  startDate         DateTime
  startTime         String

  // Incentivization
  isIncentivized    Boolean @default(false)
  entryFeeAmount    Float?
  entryFeeToken     String?
  prizePoolAmount   Float?
  prizePoolToken    String?
  prizeDistribution Json?

  rules     String?
  imageUrl  String?
  isPrivate Boolean @default(false)

  // Streaming
  isStreamed Boolean @default(false)
  streamLink String?

  // Betting
  allowBetting Boolean @default(false)

  status    TournamentStatus @default(PENDING)
  createdAt DateTime         @default(now())

  // Relations
  registrations TournamentRegistration[]
  bettingMarkets BettingMarket[]
  inviteCodes    TournamentInviteCode[]

  @@map("tournaments")
}

model TournamentRegistration {
  id           String     @id @default(cuid())
  tournamentId String
  tournament   Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  userId       String
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Payment Tracking
  paymentStatus    String   @default("COMPLETED") // PENDING, COMPLETED (Default to COMPLETED for migration/free)
  expectedAmount   Float?
  txHash           String?  // Can be null if free
  paymentExpiresAt DateTime?

  registeredAt DateTime   @default(now())

  @@unique([tournamentId, userId])
  @@map("tournament_registrations")
}

model TournamentInviteCode {
  id           String     @id @default(cuid())
  tournamentId String
  tournament   Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  code         String
  isUsed       Boolean    @default(false)
  usedByUserId String?
  usedByUser   User?      @relation(fields: [usedByUserId], references: [id])
  
  @@unique([tournamentId, code])
  @@map("tournament_invite_codes")
}

// ============================================
// BETTING SYSTEM
// ============================================

enum MarketType {
  PARIMUTUEL
  WEIGHTED
  BINARY
  SCORE
}

enum MarketStatus {
  OPEN
  CLOSED
  SETTLED
}

model BettingMarket {
  id           String     @id @default(cuid())
  tournamentId String
  tournament   Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)

  marketType     MarketType
  marketQuestion String
  resolutionSource String @default("MANUAL") // MANUAL, ORACLE

  poolPreSeed      Float   @default(0)
  poolPreSeedToken String?
  minBet           Float   @default(0)
  maxBet           Float?
  bookmakingFee    Float   @default(0) // percentage

  totalPool Float        @default(0)
  status    MarketStatus @default(OPEN)
  
  winningOutcomeId String? // ID of the resolved winning outcome

  createdAt DateTime @default(now())

  // Relations
  outcomes BettingOutcome[]
  bets     Bet[]

  @@map("betting_markets")
}

model BettingOutcome {
  id       String        @id @default(cuid())
  marketId String
  market   BettingMarket @relation(fields: [marketId], references: [id], onDelete: Cascade)

  label     String
  weight    Float? // for weighted markets
  totalBets Float  @default(0)
  betCount  Int    @default(0)

  // Relations
  bets Bet[]

  @@map("betting_outcomes")
}

enum BetStatus {
  PENDING
  CONFIRMED
  WON
  LOST
}

model Bet {
  id        String         @id @default(cuid())
  marketId  String
  market    BettingMarket  @relation(fields: [marketId], references: [id], onDelete: Cascade)
  outcomeId String
  outcome   BettingOutcome @relation(fields: [outcomeId], references: [id], onDelete: Cascade)
  userId    String
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  amount Float
  token  String
  txHash String?

  status       BetStatus @default(PENDING)
  payoutAmount Float?

  placedAt DateTime @default(now())

  @@map("bets")
}

// ============================================
// TRANSACTION RECEIPTS (Indexer)
// ============================================

enum ReceiptType {
  ENTRY_FEE
  BET
  SEED
}

enum ReceiptStatus {
  PENDING
  VERIFIED
  FAILED
}

model TransactionReceipt {
  id          String      @id @default(cuid())
  txHash      String      @unique
  fromAddress String
  amount      Float
  token       String
  type        ReceiptType
  referenceId String // tournament_id or market_id

  status     ReceiptStatus @default(PENDING)
  verifiedAt DateTime?

  @@map("transaction_receipts")
}

// ============================================
// STREAMS
// ============================================

enum StreamPlatform {
  TWITCH
  YOUTUBE
}

enum StreamStatus {
  OFFLINE
  LIVE
  SCHEDULED
}

model Stream {
  id           String         @id @default(cuid())
  title        String
  description  String?
  platform     StreamPlatform
  channelName  String // e.g., 'riotgames' for Twitch, channel ID for YouTube
  channelUrl   String? // Full URL to the channel
  thumbnailUrl String?

  isLive      Boolean      @default(false)
  viewerCount Int          @default(0)
  status      StreamStatus @default(OFFLINE)

  // Schedule info
  scheduledStart DateTime?
  actualStart    DateTime?
  endedAt        DateTime?

  // Featured/Active flags
  isFeatured Boolean @default(false)
  isActive   Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  chatMessages ChatMessage[]

  @@map("streams")
}

model ChatMessage {
  id      String @id @default(cuid())
  content String

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  streamId String
  stream   Stream @relation(fields: [streamId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([streamId, createdAt])
  @@map("chat_messages")
}

// ============================================
// WATCH-TO-EARN
// ============================================

model WatchSession {
  id       String  @id @default(cuid())
  userId   String
  user     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  streamId String?

  watchTimeSeconds   Int @default(0)
  effortPointsEarned Int @default(0)

  startedAt DateTime @default(now())
  lastPing  DateTime @default(now())

  @@map("watch_sessions")
}

// ============================================
// NOTIFICATIONS
// ============================================

enum NotificationType {
  TOURNAMENT
  EARNING
  SYSTEM
  SOCIAL
}

model Notification {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  type        NotificationType
  title       String
  message     String
  actionUrl   String?
  actionLabel String?
  amount      Float?

  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("notifications")
}

// ============================================
// LEADERBOARD
// ============================================

model LeaderboardEntry {
  id     String  @id @default(cuid())
  userId String
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  gameId String? // null for global leaderboard
  game   Game?   @relation(fields: [gameId], references: [id], onDelete: SetNull)

  rank            Int
  matchWins       Int @default(0)
  timePlayedHours Int @default(0)
  tournamentsWon  Int @default(0)
  totalScore      Int @default(0)

  updatedAt DateTime @updatedAt

  @@unique([userId, gameId])
  @@map("leaderboard_entries")
}
